<h1>Record new video</h1>

<div class="">
    <div class="">
        <%= form_for(@video, html: { multipart: true }) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.label :content %>
            <%= f.text_field :content %>
            
            <%= f.file_field :video %>
            <%= f.submit "Record new Video", class: "" %>
        <% end %>
    </div>
</div>
